@model VideoGameApp.Models.VideoGame

@{
    Layout = "_RegisterLayout";
    ViewData["Title"] = "Add a New Game";
}

<h2 class="text-center">Add a New Video Game</h2>

<style>
    .register-container {
        background-color: #f8f9fa; /* Light background color */
        padding: 40px; /* Increased padding for a larger panel */
        border-radius: 10px;
        max-width: 800px; /* Increased max-width for a larger panel */
        margin: auto; /* Center the panel */
    }

    .form-label {
        width: 150px; /* Increased width for labels */
    }

    /* Dark mode styles */
    .dark-mode .register-container {
        background-color: #333; /* Black background for dark mode */
        color: #fff; /* White text for dark mode */
    }

    .dark-mode .form-control {
        background-color: #555; /* Dark grey background for text boxes */
        color: #fff; /* White text for text boxes */
        border: 1px solid #777; /* Darker border for text boxes */
    }

    .dark-mode .form-label {
        color: #fff; /* White text for labels */
    }
</style>

<div class="register-container">
    <form asp-action="Create" method="post">
        <div class="mb-3 d-flex align-items-center">
            <label asp-for="Title" class="form-label me-3">Title</label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger ms-2"></span>
        </div>

        <div class="mb-3 d-flex align-items-center">
            <label asp-for="Price" class="form-label me-3">Price</label>
            <input asp-for="Price" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="Price" class="text-danger ms-2"></span>
        </div>

        <div class="mb-3 d-flex align-items-center">
            <label asp-for="Description" class="form-label me-3">Description</label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger ms-2"></span>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary">Create</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

